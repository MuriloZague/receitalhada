{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./__tests__/**/*"
  ]
}